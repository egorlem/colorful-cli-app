#!/bin/sh

#ASCII ART LOGO
rst="\033[0m"
L1S="    @@   @@@          @@@@@@@@  @@@@@@   @@@@@@ @@@ @@@    @@@@@@@  @@@      @@@"
L2S="  @@@@     @@@        @@@@@@@@ @@@@@@@@ @@@@@@@ @@@ @@@   @@@@@@@@  @@@      @@@"
L3S="!@@!          @@!     @@!      @@!  @@@ !@@     @@! !@@   !@@       @@!      @@!"
L4S="!@!             !@!   !@!      !@!  @!@ !@!     !@! @!!   !@!       !@!      !@!"
L5S="!!!@             !!@  @!!!:!   @!@!@!@! !!@@!!   !@!@!    !@!       @!!      !!@"
L6S=" !!!@@@!          !!! !!!!!:   !!!@!!!!  !!@!!!   @!!!    !!!       !!!      !!!"
L7S="    !:!:!       !!:   !!:      !!:  !!!      !:!  !!:     :!!       !!:      !!:"
L8S="        :!    :!:     :!:      :!:  !:!     !:!   :!:     :!:       :!:      :!:"
L9S="       ::   ::        :: ::::  ::   ::: :::: ::    ::      ::: :::  :: ::::  :: "
L10S="       :: :           : :: ::   :   :   :: : :     :       :: :: :  : :: : : : "
DIVIDER="--------------------------------------------------------------------------------"
#LOGOCOLORS
L1C="\033[38;05;129m"
L2C="\033[38;05;105m"
L3C="\033[38;05;96m"
L4C="\033[38;05;89m"
L5C="\033[38;05;197m"
L6C="\033[38;05;124m"
L7C="\033[38;05;152m"
L8C="\033[38;05;44m"
L9C="\033[38;05;41m"
L10C="\033[38;05;105m"
echo "\n"
echo "$L1C$L1S$rst"
echo "$L2C$L2S$rst"
echo "$L3C$L3S$rst"
echo "$L4C$L4S$rst"
echo "$L5C$L5S$rst"
echo "$L6C$L6S$rst"
echo "$L7C$L7S$rst"
echo "$L8C$L8S$rst"
echo "$L9C$L9S$rst"
echo "$L10C$L10S$rst"
echo "\t"
echo "$DIVIDER"
echo "TERM: $TERM"
echo "$DIVIDER"

BODY="term=$TERM"
BASEURL=http://localhost:5000/data

function myfunc() {
   exec curl -d ${BODY} -X POST ${BASEURL}
}
myfunc
